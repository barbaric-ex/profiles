<div class="row my-5">
  <div class="col-3">
    

    <div class="img_wrap">
        <img src="/assets/user.jpg" alt="User Image" />


        <a href="#" class="btn btn-success"><%= currentAcc.firstName %> profile</a><br>
        <a href="#" class="btn btn-danger" onclick="deleteProfile('<%= currentAcc.id %>')">Delete</a>

  <script>
  function deleteProfile(userId) {
    if (confirm("Are you sure you want to delete this profile?")) {
      fetch(`/profile/${userId}`, {
        method: "DELETE",
      })
        .then((response) => {
          if (response.ok) {
            alert("Profile deleted successfully.");
            window.location.href = "/"; // Redirektaj na početnu stranicu nakon brisanja
          } else {
            alert("Failed to delete profile.");
          }
        })
        .catch((error) => console.error("Error:", error));
    }
  }
</script>

    </div>

  </div>
  <div class="col-9">
    <div class="info_wrapper">
        <div class="first">
            <h3>Accounts</h3>
        </div>
      <h5>Full name: <span class="bg-dark text-white  rounded"><%= currentAcc.firstName %> <%= currentAcc.lastName %></span></h5>
      <h5>Deposit: <span class="bg-danger text-white  rounded"><%= currentAcc.creditCard %></span></h5></h5>
      <h5>Credit Card: <span class="bg-primary text-white  rounded"><%= currentAcc.deposit %></span></h5></h5>
      <h5>Age: <span class="bg-dark text-white  rounded"><%= currentAcc.profileInfo.age %></span></h5></h5>
      <h5>Gender: <span class="bg-dark text-white  rounded"><%= currentAcc.profileInfo.gender %></span></h5></h5>
      <h5>City: <span class="bg-dark text-white  rounded"><%= currentAcc.profileInfo.city %></span></h5></h5>
    </div>
  </div>
</div>
